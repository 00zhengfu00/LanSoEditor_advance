<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     
     <com.example.lansongeditordemo.view.DrawPadView
            android:id="@+id/id_filterPen_demo_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
     
          <LinearLayout 
          android:id="@+id/id_filterdemo_saveplay"
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/corners_btn_orange_bg"
          android:layout_marginTop="50dip"
          android:layout_gravity="center"
          android:orientation="vertical">
		  	  
           <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="视频已经为您实时生成, 请点击预览"
              android:layout_margin="5dip"
              android:textColor="@color/red"
              />
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:src="@drawable/play2"/>
      </LinearLayout>
        
        
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
          <Button
            android:id="@+id/id_filterPen_demo_selectbtn"
            android:layout_width="match_parent"
            android:layout_margin="20dip"
            android:layout_height="wrap_content"
            android:text="选择滤镜效果."/>
        
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              
              <TextView 
                  android:layout_width="0dip"
                  android:layout_weight="2"
                  android:layout_height="wrap_content"
                  android:text="滤镜调节"/>
              
                <SeekBar 
			      android:id="@+id/id_filterPen_demo_seek1"
			      android:layout_width="0dip"
			      android:layout_weight="6"
			      android:layout_height="wrap_content"
			      android:layout_margin="5dip"/>
          </LinearLayout>
    </LinearLayout>

</LinearLayout>
